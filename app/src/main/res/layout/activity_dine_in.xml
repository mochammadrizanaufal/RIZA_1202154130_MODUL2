<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:orientation="vertical"
android:layout_centerHorizontal="true"
android:layout_centerInParent="true"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.example.android.riza_1202154130_modul2.dineIn">

<TextView
    android:id="@+id/detail_customer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="23dp"
    android:text="Detail Customer:"
    android:textAlignment="center"
    android:textSize="20sp" />

<EditText
    android:id="@+id/editText_nama"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="60dp"
    android:layout_marginTop="20dp"
    android:ems="5"
    android:inputType="textPersonName"

    android:hint="Nama"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="24dp"
    android:layout_marginHorizontal="64dp">

    <TextView
        android:id="@+id/textview_no_meja"
        android:text="No. Meja:"
        android:textSize="17sp"
        android:layout_width="125dp"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/label_spinner"
        android:layout_width="123dp"
        android:layout_height="wrap_content"></Spinner>

</LinearLayout>

<Button
    android:id="@+id/button_pilih_pesanan"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="55dp"
    android:text="Pilih Pesanan"
    android:layout_marginHorizontal="125dp"
    android:onClick="daftar_menu"
    />


</LinearLayout>
